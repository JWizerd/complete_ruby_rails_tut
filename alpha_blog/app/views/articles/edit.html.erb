<h1>edit existing articles</h1>

<% if @article.errors.any? %>
<h2>The following errors prevented the Article from getting created. Please try again</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %></br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %></br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>    
  </p>

<% end %>

<%= link_to 'show', article_path %>

<p><strong><%= link_to "Back to all articles", articles_path %></strong></p>